%section.bg-gray-900.min-h-screen
  .flex.flex-col.items-center.justify-center.px-4.py-8.mx-auto.lg:py-0
    .w-full.rounded-lg.shadow.border.bg-gray-800.border-gray-700
      .p-6.space-y-4.md:space-y-6.sm:p-8
        %h1.text-xl.text-center.font-bold.leading-tight.tracking-tight.md:text-2xl.text-white
          Edit your Account
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = render "devise/shared/error_messages", resource: resource
          .flex.flex-row.px-6.md:px-6.pb-0.pt-4.justify-center
            %div.w-full
              .grid.grid-cols-1.md:gap-8.pb-0.px-2.md:px-1.md:grid-cols-2
                .field.block.mb-2.text-sm.font-medium.text-white
                  = f.label :email
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                    %div
                      Currently waiting confirmation for: #{resource.unconfirmed_email}
                .field.block.mb-2.text-sm.font-medium.text-white
                  = f.label :password
                  %i (leave blank if you don't want to change it)
                  = f.password_field :password, autocomplete: "new-password", class: "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                  - if @minimum_password_length
                    %em.text-gray-500
                      = @minimum_password_length
                      characters minimum
                  %br/
                  = f.label :password_confirmation
                  = f.password_field :password_confirmation, autocomplete: "new-password",  class: "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                .field.block.mb-2.text-sm.font-medium.text-white
                  = f.label :current_password
                  %br/
                  %i.text-gray-300 (we need your current password to confirm your changes)
                  %br/
                  = f.password_field :current_password, autocomplete: "current-password",  class: "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
          .actions.mt-5.mx-8
            %button.btn.w-full.text-white.focus:ring-4.focus:outline-none.font-medium.rounded-lg.text-sm.px-5.text-center.bg-primary-600.hover:bg-primary-700.focus:ring-primary-800
              = f.submit "Update Account", class: 'py-2.5', role: "button"
        %div.text-white.mx-8
          Unhappy? #{button_to "Cancel my account", registration_path(resource_name), class:"text-red-800 hover:underline" ,data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete}
          = link_to "Back", :back, class:"text-white hover:underline"
