
= form_with(model: current_selected.active_relationships.build,  data: { remote: true }) do |f|
  %div= hidden_field_tag :followed_id, @pet.id
  %div= hidden_field_tag :follower_id, current_selected.id
  %button#dropdownFollowButton.dropbtn.text-white.focus:ring-4.focus:outline-none.font-medium.rounded-lg.text-sm.px-5.text-center.inline-flex.items-center.dfocus:ring-blue-800{:class => "py-1.5 !bg-blue-600 hover:!bg-blue-700", "data-dropdown-toggle" => "dropdown", :type => "button"}
    = f.submit "Follow", class: "px-4 pr-10", role: "button"
