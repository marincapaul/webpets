%section.bg-gray-900.min-h-screen
  %h2.text-white
    .grid.place-items-center
      %div.image-icon.flex
        - if @owner.avatar.present?
          = image_tag @owner.avatar, class: "img-thumbnail w-20 h-20 rounded-full object-cover", id: "imgNew"
        - else 
          %img#imgNew.img-fluid.img-thumbnail.w-20.h-20.rounded-full.object-cover{:src => image_path('avatar_placeholder.png')}/
        %h2.text-white.px-4
          = link_to "Edit Account",edit_owner_registration_path , class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
          = link_to "Edit Profile", edit_profile_owners_path, class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
          = link_to "Add new pet", new_pet_path, class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
    
      = @owner.first_name + " " + @owner.last_name
  .grid.gap-8.px-4.py-6.lg:py-10.md:grid-cols-2
    = render @pets
  %h2.text-white
    = link_to "Edit Account",edit_owner_registration_path , class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
    = link_to "Edit Profile", edit_profile_owners_path, class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
    = link_to "Add new pet", new_pet_path, class:"block py-2 pr-4 pl-3 rounded md:border-0 md:p-0 text-gray-400 hover:text-white hover:bg-gray-700 hover:text-white hover:bg-transparent"
    