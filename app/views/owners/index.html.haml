.container.justify-self-start
  .row
    .col-10
      .col.mb-3
        .fdb-box
          .row.justify-content-start
            .col-12.col-xl-8.text-start
              %h1.font-weight-bold.text-lg Owners
  - @owners.each do |owner|
    %h1.text-lg.font-semibold.pb-3= "#{owner.first_name} #{owner.last_name}"
    %button.bg-blue-500.hover:bg-blue-700.text-white.font-bold.py-2.px-4.rounded buton
    .btn.btn-dark.text-base= link_to "See full profile", owner_path(owner)
    .mx-5.pt-5
      .p-6.border-t.border-gray-300.rounded-b.dark:border-gray-600