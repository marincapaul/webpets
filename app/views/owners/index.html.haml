.container.justify-self-start
  .row
    .col-10
      .col.mb-3
        .fdb-box
          .row.justify-content-start
            .col-12.col-xl-8.text-start
              %h1.font-weight-bold.text-lg Owners
      - @owners.each do |owner|
        .col.mb-3
          .fdb-box.fdb-touch
            .row.justify-content-start
              .col-8.col-xl-8.text-start
                %h1.text-lg.font-semibold.pb-3= "#{owner.first_name} #{owner.last_name}"
              .grid.grid-rows-3
                .text-lg Contact
                %p.text-base
                  Email: #{owner.email}
                .box-border
                  %p.btn.btn-dark.text-base= link_to "See full profile", owner_path(owner)